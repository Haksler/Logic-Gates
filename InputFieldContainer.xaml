<UserControl x:Class="Symulator_układów_logicznych.InputFieldContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Symulator_układów_logicznych"
             mc:Ignorable="d" 
             MouseLeftButtonDown="UserControl_MouseLeftButtonDown">

    <Ellipse Stroke="Black" StrokeThickness="1" Fill="Gray" x:Name="Circle" Height="50" Width="50">
        <Ellipse.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Create Connection" Click="MenuItem_Click"/>
            </ContextMenu>
        </Ellipse.ContextMenu>
    </Ellipse>
</UserControl>
