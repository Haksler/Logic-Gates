<UserControl x:Class="LogicGates.GateContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogicGates"
             mc:Ignorable="d" 
             Width="100" Height="50" FontSize="20" 
             MouseMove="Content_MouseMove" 
             BorderBrush="Black" BorderThickness="1"
             Background="Gray">
    <Label x:Name="ContentLabel" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
        <Label.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Create Connection" Click="CreateVisualConnection_Click"/>
                <MenuItem Header="Delete" Click="Delete_Click"/>
            </ContextMenu>
        </Label.ContextMenu>
    </Label>
</UserControl>
